// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum SessionStatus {
  RUNNING
  PAUSED            
  EXPIRED_WAITING_CONFIRM
  CONFIRMED_EXIT
  CANCELLED
}

model User {
  id            String   @id @default(uuid())
  username      String   @unique
  passwordHash  String
  role          Role
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  sessions      Session[] @relation("CreatedBy")
  confirmed     Session[] @relation("ConfirmedBy")
}

model Session {
  id                 String         @id @default(uuid())
  childName          String
  durationMinutes    Int
  startTime          DateTime
  endTime            DateTime
  status             SessionStatus  @default(RUNNING)
  notes              String?
  remainingSeconds   Int? 
  createdById        String
  createdBy          User           @relation("CreatedBy", fields: [createdById], references: [id])
  confirmedExitById  String?
  confirmedExitBy    User?          @relation("ConfirmedBy", fields: [confirmedExitById], references: [id])
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  userId    String?
  sessionId String?
  payload   Json?
  createdAt DateTime @default(now())
}

model Setting {
  id                      Int      @id @default(1)
  defaultDurationMinutes  Int      @default(15)
  updatedAt               DateTime @updatedAt
}
